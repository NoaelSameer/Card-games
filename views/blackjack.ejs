<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlackJack</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#a3b18a] h-[100vh] flex flex-col justify-center items-center">
    <h1 class="text-center text-[5vw] text-white mb-[2vh]">Blackjack</h1>
    <div class="flex justify-between w-[100vw] max-w-[70vw] px-8 py-4 text-[2vw] text-white ">
        <div class="text-left">
            <p>Dealer Value: <%= dealerValue %> + ??</p>
        </div>
        <div class="text-right">
            <p>Player Value: <%= playerValue %></p>
        </div>
    </div>

    <div class="flex justify-center space-x-[1vw] mt-6 w-full max-w-[30vw] px-4">
        <% dealerCards.forEach((card, index) => { %>
            <img src="<%= card %>" alt="Dealer Card <%= index + 1 %>" class="w-[8vw] h-[20vh] rounded-lg border-2 border-white">
        <% }); %>
    </div>
    <div class="w-full max-w-[60vw] border-t-[1vh] border-white my-[2vh]"></div>
    <div class="flex justify-center space-x-[1vw] mt-6 w-full max-w-[30vw] px-4">
        <% playerCards.forEach((card, index) => { %>
            <img src="<%= card %>" alt="Player Card <%= index + 1 %>" class="w-[8vw] h-[20vh] rounded-lg border-2 border-white">
        <% }); %>
    </div>


    <% if (!gameOver && starter) { %>
        <div class="flex justify-center space-x-[2vw] mt-12">
            <form method="POST" action="/blackjack">
                <button name="action" value="hit" class="text-[2vw] px-6 py-3 bg-[#588157] text-white rounded-lg hover:bg-[#3a5a40] transition duration-100">Hit</button>
            </form>
            <form method="POST" action="/blackjack">
                <button name="action" value="stand" class="text-[2vw] px-6 py-3 bg-[#588157] text-white rounded-lg hover:bg-[#3a5a40] transition duration-100">Stand</button>
            </form>
        </div>
    <% } else if (!starter && !gameOver) { %>
        <form method="POST" action="/blackjack">
            <button name="action" value="start" class="text-[2vw] px-6 py-3 bg-[#588157] text-white rounded-lg hover:bg-[#3a5a40] transition duration-100">Start</button>
        </form>
    <% } else { %>
        <p class="text-[2vw] text-white mt-12">Game Over! <%= message %></p>
    <% } %>

    <!-- Restart Button -->
    <% if (gameOver) { %>
        <form method="post" action="/blackjack" class="mt-6">
            <button name="action" value="newGame" class="text-[1.5vw] px-6 py-3 bg-[#588157] text-white rounded-lg hover:bg-[#3a5a40] transition duration-100">Restart</button>
        </form>
    <% } %>
</body>
</html>